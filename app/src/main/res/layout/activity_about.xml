<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bashar.salatreminder.AboutActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/about_image"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Salah Reminder"
        android:textSize="22sp"
        android:typeface="sans"
        android:id="@+id/textView14"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Version: 4.07012019"
        android:textColor="#06789c"
        android:layout_marginBottom="12dp"
        android:id="@+id/textView15"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Salah Reminder is a Prayer Time Management Application for Muslims. Simplest way to remind youself and others but managed by yourself. Copyright 2015-2016. All Rights reserved by Developer"
        android:id="@+id/textView16"
        android:textSize="16sp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developer"
        android:id="@+id/textView17"
        android:textColor="#06789c"
        android:textSize="18sp"
        android:typeface="sans"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Khairul Bashar"
        android:id="@+id/textView18"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="engmkbj@gmail.com"
        android:textColor="#000000"
        android:id="@+id/textView19"
        android:textSize="16sp"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate App"
        android:id="@+id/buttonRateApp"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="54dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More apps from Developer"
        android:id="@+id/buttonMoreDev"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/buttonRateApp" />
</RelativeLayout>
</ScrollView>